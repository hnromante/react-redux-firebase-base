{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "object-literal-sort-keys": false,
    "no-console": false,
    "variable-name": [
      false,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "member-access": [true, "no-public"],
    "ordered-imports": false
  },
  "jsRules": {
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
